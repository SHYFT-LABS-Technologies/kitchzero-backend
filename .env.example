NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration (use environment-specific values)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kitchzero_dev
DB_USERNAME=postgres
DB_PASSWORD=${DB_PASSWORD}  # Set via environment

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}  # Set via environment
REDIS_DB=0

# JWT Configuration (MUST be set via environment in production)
JWT_ACCESS_SECRET=${JWT_ACCESS_SECRET}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=kitchzero-api
JWT_AUDIENCE=kitchzero-client

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=30
SESSION_SECRET=${SESSION_SECRET}
CSRF_SECRET=${CSRF_SECRET}

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_ATTEMPTS=20
RATE_LIMIT_LOGIN_WINDOW_MS=3600000

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001