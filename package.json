{
  "name": "kitchzero-saas",
  "version": "1.0.0",
  "description": "Multi-tenant restaurant/hotel management system",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec \"node -r dotenv/config -r ts-node/register src/server.ts\"",
    "dev:debug": "node scripts/start-debug.js",
    "build": "tsc -p tsconfig.json",
    "build:dev": "tsc -p tsconfig.dev.json",
    "build:test": "tsc -p tsconfig.test.json",
    "start": "node dist/server.js",
    "db:setup": "cross-env NODE_ENV=development node scripts/setup-db.js",
    "db:setup-waste": "cross-env NODE_ENV=development node scripts/setup-waste-management.js",
    "db:setup:docker": "cross-env NODE_ENV=docker node scripts/setup-db.js",
    "db:check": "node scripts/check-db-status.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/",
    "test:verbose": "jest --verbose",
    "test:silent": "jest --silent",
    "type-check": "tsc --noEmit",
    "type-check:test": "tsc --noEmit -p tsconfig.test.json",
    "clean": "rimraf dist dist-dev dist-test coverage",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:setup": "docker-compose up -d postgres redis && timeout /t 15 && npm run db:setup:docker",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "logs:tail": "tail -f logs/application-*.log",
    "logs:error": "tail -f logs/error-*.log",
    "logs:security": "tail -f logs/security-*.log"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "express": "^4.19.2",
    "express-joi-validation": "^6.1.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.3.2",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "sequelize": "^6.37.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.11.19",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
